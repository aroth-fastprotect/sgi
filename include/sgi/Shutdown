#pragma once

namespace sgi {

template<typename AUTOLOADCLASS>
inline void shutdown()
{
    typedef void (*pfn)();
    pfn func = (pfn)AUTOLOADCLASS::sgiLibraryProcAddressNoLoad("sgi_shutdown");
    if(func)
    {
        func();
        AUTOLOADCLASS::sgiLibraryUnload();
    }
}

} // namespace sgi
